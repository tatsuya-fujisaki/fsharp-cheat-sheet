<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="log4net"
                 type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
    <log4net>
        <appender name="Appender1"
                  type="log4net.Appender.RollingFileAppender">
            <staticLogFileName value="false" />
            <rollingStyle value="Date"/>
            <maxSizeRollBackups value="30" />
            <datePattern value="-yyyyMMdd'.log'"/>
            <!-- Choose one of three 'file' elements -->
            <!--
            <file value="${TEMP}\${COMPUTERNAME}-${USERNAME}" />
            <file value="C:\foo\${COMPUTERNAME}-${USERNAME}" />
            <file value="log\${COMPUTERNAME}-${USERNAME}"/>
            -->
            <file value="log\${COMPUTERNAME}-${USERNAME}"/>

            <!-- Set a log directory at run time -->
            <!--<file type="log4net.Util.PatternString"
                      value="%property{LogDir}\%property{AppName}-${COMPUTERNAME}-${USERNAME}"/> -->

            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date{yyyy-MM-dd HH:mm}|%level|%logger|%method|%message%newline" />
            </layout>-->

            <!-- Use LevelMin if you want this appender to log only FATAL or higher while other appenders log of the specified level in <root> below. -->
            <!--
            <filter type="log4net.Filter.LevelRangeFilter">
                <param name="LevelMin"
                       value="FATAL"/>
            </filter>
            -->
        </appender>
        <root>
            <level value="ERROR" />
            <appender-ref ref="Appender1" />
        </root>
        <!-- If NHibernate is used. -->
        <!--
        <logger name="NHibernate">
            <level value="WARNING" />
        </logger>
        -->
    </log4net>
    <connectionStrings>
        <clear />
        <!-- The "name" attribute below is required and must not be empty. -->
        <add name="_"
             connectionString="data source=example.com;initial catalog=database1;user=user1;password=password1" />
    </connectionStrings>
    <appSettings>
        <add key="Key1"
             value="Value1" />
    </appSettings>
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="log4net"
                                  publicKeyToken="669e0ddf0bb1aa2a"
                                  culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-1.2.14.0"
                                 newVersion="1.2.15.0"/>
            </dependentAssembly>
        </assemblyBinding>
    </runtime>
</configuration>
